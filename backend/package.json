{
  "name": "backend",
  "version": "0.0.1",
  "description": "Finans Backend - News aggregation API",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev": "npm run prisma:generate && nest start --watch",
    "dev:debug": "npm run prisma:generate && nest start --debug --watch",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:migrate:create": "prisma migrate dev --schema prisma/schema.prisma --create-only",
    "prisma:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema prisma/schema.prisma --force",
    "prisma:studio": "prisma studio --schema prisma/schema.prisma",
    "prisma:push": "prisma db push --schema prisma/schema.prisma",
    "migrate": "npm run prisma:deploy",
    "migrate:dev": "npm run prisma:migrate",
    "seed": "ts-node --transpile-only prisma/seed.ts",
    "db:setup": "npm run prisma:generate && npm run prisma:deploy && npm run seed",
    "db:reset": "npm run prisma:reset && npm run seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:db": "docker-compose up -d db",
    "docker:redis": "docker-compose --profile redis up -d",
    "docker:all": "docker-compose --profile redis --profile app up -d",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck && npm run test",
    "smoke": "ts-node --transpile-only scripts/smoke.ts",
    "smoke:mock": "cross-env MOCK_MODE=true ts-node --transpile-only scripts/smoke.ts",
    "smoke:verbose": "cross-env VERBOSE=true ts-node --transpile-only scripts/smoke.ts",
    "ci": "npm run check && npm run build",
    "ci:smoke": "npm run ci && npm run smoke:mock"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^6.19.2",
    "bottleneck": "^2.19.5",
    "bullmq": "^5.67.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "fast-xml-parser": "^4.5.3",
    "ioredis": "^5.9.2",
    "lru-cache": "^11.2.4",
    "nestjs-pino": "^4.5.0",
    "pino": "^9.14.0",
    "pino-pretty": "^11.3.0",
    "prisma": "^6.19.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "undici": "^6.23.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
