# Server
PORT=3002
NODE_ENV=development

# Binance API
BINANCE_BASE_URL=https://api.binance.com

# Finnhub API (stocks, quote, candles)
FINNHUB_API_KEY=
# or: FINNHUB_TOKEN=
# Optional: FINNHUB_BASE_URL=https://finnhub.io/api/v1

# Yahoo Finance Throttling (for BIST data)
# Maximum concurrent requests to Yahoo Finance
YAHOO_CONCURRENCY=3
# Minimum delay between Yahoo Finance requests (ms)
YAHOO_MIN_DELAY_MS=100

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_MAX=120

# Google Gemini AI (for Kamil AI assistant)
GEMINI_API_KEY=

# Mock Data Fallback (when API is unreachable)
# Set to 'true' to disable mock fallback and always require real API
DISABLE_MOCK_FALLBACK=false
